upstream project-ci.net {
  server 127.0.0.1:8080;
}

server {

  listen 80;
  server_name project-ci.net;

  gzip off;

  # Set log files
  log_subrequest on;
  rewrite_log on;
  access_log /var/log/nginx/project-ci.net.access.log combined;
  error_log /var/log/nginx/project-ci.net.error.log error;

  location / {
    proxy_pass http://project-ci.net;
    proxy_next_upstream error timeout invalid_header http_500 http_502 http_503 http_504;
    proxy_redirect off;
    proxy_read_timeout 120;

    proxy_set_header    Host            $host;
    proxy_set_header    X-Real-IP       $remote_addr;
    proxy_set_header    X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header    X-Forwarded-Proto http;
  }

  location /nginx_status {
    # Turn on nginx stats
    stub_status on;

    # No need logs for stats
    access_log off;

    allow all;
  }
}
